@model LearnerProject.Models.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mt-3">Kategori Güncelle</h3>

<form method="post">

    @Html.HiddenFor(x=>x.CategoryId)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control mb-3", @placeholder = "Kagetori Adı" })
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control mb-3", @placeholder = "İkon" })
    <button class="btn btn-outline-primary"><i class="fa fa-edit">Güncelle</i></button>
</form>
