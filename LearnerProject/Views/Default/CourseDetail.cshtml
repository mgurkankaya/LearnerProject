@model LearnerProject.Models.Entities.Course
@{
    ViewBag.Title = "CourseDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('images/img-school-1-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">

                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">@Model.CourseName</h1>

                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">

                        </div>

                        <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="#incele" class="btn btn-secondary">Kursu İncele</a></p>

                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->



<div class="untree_co-section">
    <div class="container">
        <div class="row">
            <div class="col-12">




                <div class="custom-block" data-aos="fade-up" data-aos-delay="100">


                    <h2 class="section-title text-center">@Model.CourseName</h2>
                    <div class="owl-single owl-carousel no-nav" id="incele">

                        @foreach (var item in ViewBag.review as List<LearnerProject.Models.Entities.Review>)
                        {
                            <div class="testimonial mx-auto">
                                <figure class="img-wrap">
                                    <img src="@Model.ImageUrl" alt="Image" class="img-fluid">
                                </figure>
                                <h3 class="name text-black">@Model.Description</h3>


                                <blockquote>
                                    <p>&ldquo; @item.Comment  &rdquo;</p>
                                </blockquote> <p><b>Yorum Sahibi:</b> @item.Student.NameSurname</p>

                            </div>


                        }

                        </div>

                </div>
            </div>







        </div>

    </div>

</div> <p class="text-center"><a class="btn btn-outline-primary " href="/Student/Register">Satın al</a></p>



