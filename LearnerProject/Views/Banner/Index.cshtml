@model List<LearnerProject.Models.Entities.Banner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">Banner / Öne Çıkan Görsel</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="col-md-1 text-center">#</th>
            <th class="col-md-9">Başlık</th>
            <th class="col-md-2 text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <td>@item.Title</td>
               
                <td class="text-center">
                    <a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Banner/AddBanner/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Banner Ekle</a>