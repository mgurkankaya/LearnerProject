@model LearnerProject.Models.Class.IEClass
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">Kurslar</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="col-md-1 text-center">#</th>
            <th class="col-md-1">Kurs Adı</th>
            <th class="col-md-5">Görsel URL</th>
            <th class="col-md-1">Açıklama</th>
            <th class="col-md-1">Fiyat</th>
            <th class="col-md-1">Kategori</th>
            <th class="col-md-2 text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CourseIE)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <td>@item.CourseName</td>
                <td>@item.ImageUrl</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category.CategoryName</td>
                <td class="text-center">
                    <a href="/Course/DeleteCourse/@item.CourseId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    <a href="/Course/UpdateCourse/@item.CourseId" class="btn btn-outline-info"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table> 
<a href="/Course/AddCourse/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Kurs Ekle</a>