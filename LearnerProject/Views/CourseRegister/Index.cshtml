@model List<LearnerProject.Models.Entities.CourseRegister>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<h3 class="mt-3">Kurs Kayıtları</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="col-md-1 text-center">#</th>
            <th class="col-md-5">Kurs Adı</th>
            <th class="col-md-5">Öğrenci Adı</th>
            <th class="col-md-1 text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <td>@item.Course.CourseName</td>
                <td>@item.Student.UserName</td>
               
                <td class="text-center">
                    <a href="/CourseRegister/DeleteCourseRegister/@item.CourseRegisterId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    <a href="/CourseRegister/UpdateCourseRegister/@item.CourseRegisterId" class="btn btn-outline-info"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/CourseRegister/AddCourseRegister/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Kurs Kaydı Ekle</a>