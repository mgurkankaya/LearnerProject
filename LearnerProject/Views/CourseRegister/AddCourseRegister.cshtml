@model LearnerProject.Models.Entities.CourseRegister
@{
    ViewBag.Title = "AddCourseRegister";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mt-3">Kurs Kaydı Ekle</h3>

<form method="post">

    @Html.DropDownListFor(x => x.StudentId, (List<SelectListItem>)ViewBag.student, "Öğrenci Seç", new { @class = "form-control mb-3" })
    @Html.DropDownListFor(y => y.CourseId, (List<SelectListItem>)ViewBag.course, "Kurs Seç", new { @class = "form-control mb-3" })

    <button class="btn btn-outline-primary"><i class="fas fa-save"> Kaydet</i></button>
</form>