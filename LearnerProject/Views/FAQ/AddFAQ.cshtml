@model LearnerProject.Models.Entities.FAQ
@{
    ViewBag.Title = "AddFAQ";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mt-3">SSS Ekle</h3>
<form method="post">

    @Html.TextBoxFor(x => x.Question, new { @class = "form-control mb-3", @placeholder = "Sorular" })
    @Html.TextBoxFor(x => x.Answer, new { @class = "form-control mb-3", @placeholder = "Cevaplar" })
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mb-3", @placeholder = "Görsel URL" })
    <button class="btn btn-outline-primary"><i class="fas fa-save">Kaydet</i></button>
</form>