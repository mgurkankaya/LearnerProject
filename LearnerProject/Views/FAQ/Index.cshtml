@model List<LearnerProject.Models.Entities.FAQ>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">SSS</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="col-md-1 text-center">#</th>
            <th class="col-md-3">Sorular</th>
            <th class="col-md-3">Cevaplar</th>
            <th class="col-md-3">Görsel URL</th>
            <th class="col-md-1">Durum</th>
            <th class="col-md-1 text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <td>@item.Question</td>
                <td>@item.Answer</td>
                <td>@item.ImageUrl</td>
                <td>@item.Status</td>

                <td class="text-center">
                    <a href="/FAQ/DeleteFAQ/@item.FAQId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    <a href="/FAQ/UpdateFAQ/@item.FAQId" class="btn btn-outline-info"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/FAQ/AddFAQ/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>SSS Ekle</a>