@model LearnerProject.Models.Entities.FAQ
@{
    ViewBag.Title = "UpdateFAQ";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mt-3">SSS Güncelle</h3>
<form method="post">
    @Html.HiddenFor(x => x.FAQId)
    @Html.TextBoxFor(x => x.Question, new { @class = "form-control mb-3" })
    @Html.TextBoxFor(x => x.Answer, new { @class = "form-control mb-3" })
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mb-3" })
    <button class="btn btn-outline-primary"><i class="fa fa-edit">Güncelle</i></button>
</form>