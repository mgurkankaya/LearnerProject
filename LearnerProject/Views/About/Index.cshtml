@model List<LearnerProject.Models.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">Hakkımızda</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="col-md-1 text-center">#</th>
            <th class="col-md-1">Başlık</th>
            <th class="col-md-4">Açıklama</th>
            <th class="col-md-1">Görsel URL</th>
            <th class="col-md-1">Item1</th>
            <th class="col-md-1">Item2</th>
            <th class="col-md-1">Item3</th>
            <th class="col-md-2 text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ImageUrl</td>
                <td>@item.Item1</td>
                <td>@item.Item2</td>
                <td>@item.Item3</td>
                <td class="text-center">
                    <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/About/AddAbout/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Hakkımda Bilgisi Ekle</a>