@model LearnerProject.Models.Entities.About
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3 class="mt-3">Hakkımda Bilgisi Ekle</h3>

<form method="post">

    @Html.TextBoxFor(x => x.Title, new { @class = "form-control mb-3", @placeholder = "Başlık" })
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control mb-3", @placeholder = "Açıklama" })
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mb-3", @placeholder = "Görsel URL" })
    @Html.TextBoxFor(x => x.Item1, new { @class = "form-control mb-3", @placeholder = "Item1" })
    @Html.TextBoxFor(x => x.Item2, new { @class = "form-control mb-3", @placeholder = "Item2" })
    @Html.TextBoxFor(x => x.Item3, new { @class = "form-control mb-3", @placeholder = "Item3" })
    <button class="btn btn-outline-primary"><i class="fas fa-save">Kaydet</i></button>
</form>
