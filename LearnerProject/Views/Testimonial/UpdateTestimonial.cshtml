@model LearnerProject.Models.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3 class="mt-3">Referans Güncelle</h3>
<form method="post">
    @Html.HiddenFor(x => x.TestimonialId)
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control mb-3" })
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control mb-3" })
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mb-3" })
    <button class="btn btn-outline-primary"><i class="fa fa-edit">Güncelle</i></button>
</form>