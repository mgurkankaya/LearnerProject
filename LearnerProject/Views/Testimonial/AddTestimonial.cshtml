@model LearnerProject.Models.Entities.Testimonial
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3 class="mt-3">Referans Ekle</h3>
<form method="post">
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control mb-3", @placeholder = "İsim Soyisim" })
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control mb-3", @placeholder = "Başlık" })
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mb-3", @placeholder = "Görsel URL" })
    <button class="btn btn-outline-primary"><i class="fas fa-save">Kaydet</i></button>
</form>