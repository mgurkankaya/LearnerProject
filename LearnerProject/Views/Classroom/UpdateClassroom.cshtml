@model LearnerProject.Models.Entities.Classroom
@{
    ViewBag.Title = "UpdateClassroom";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mt-3">Derslik Güncelle</h3>
<form method="post">
    @Html.HiddenFor(x => x.ClassroomId)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control mb-3" })
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control mb-3" })
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control mb-3" })
    <button class="btn btn-outline-primary"><i class="fa fa-edit">Güncelle</i></button>
</form>