@model LearnerProject.Models.Entities.Student
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <title>Admin Login - Learner Project</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Templates/loginform/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Öğrenci Paneli Giriş</h3>



                        <form method="post" class="login-form">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control rounded-left", placeholder = "Kullanıcı Adı", @required = "Bu alan boş bırakılamaz!!!" })
                            </div>
                            <div class="form-group d-flex">

                                <input type="password" name="Password" class="form-control rounded-left" placeholder="******" required>
                            </div>

                            <div class="form-group">
                                <p class="text-danger"> @Html.ValidationSummary()</p>
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="/Default/Index"><i class="fa fa-arrow-left mr-2"></i>Siteye Dön</a>
                                </div>
                            </div>
                        </form>




                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Templates/loginform/js/jquery.min.js"></script>
    <script src="~/Templates/loginform/js/popper.js"></script>
    <script src="~/Templates/loginform/js/bootstrap.min.js"></script>
    <script src="~/Templates/loginform/js/main.js"></script>

</body>
</html>

