@model List<LearnerProject.Models.Entities.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">Öğrenci Bilgileri</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="col-md-1 text-center">#</th>
            <th class="col-md-3">İsim Soyisim</th>
            <th class="col-md-3">Kullanıcı Adı</th>
            <th class="col-md-3">Şifre</th>
            <th class="col-md-2 text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <td>@item.NameSurname</td>
                <td>@item.UserName</td>
                <td>@item.Password</td>

                <td class="text-center">
                    <a href="/Student/DeleteStudent/@item.StudentId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    <a href="/Student/UpdateStudent/@item.StudentId" class="btn btn-outline-info"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Student/AddStudent/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Öğrenci Ekle</a>