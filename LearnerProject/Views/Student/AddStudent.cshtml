@model LearnerProject.Models.Entities.Student
@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3 class="mt-3">Öğrenci Ekle</h3>
<form method="post">

    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control mb-3", @placeholder = "Öğrenci Adı Soyadı" })
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control mb-3", @placeholder = "Kullanıcı Adı" })
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control mb-3", @placeholder = "***********" })
    <button class="btn btn-outline-primary"><i class="fas fa-save">Kaydet</i></button>
</form>